. ./setenv.sh > /dev/null 2>&1
. ./all_env.sh > /dev/null 2>&1
. ./argenv.sh > /dev/null 2>&1

if [ "$HELP" == "true" ]; then
   echo "Usage:"
   echo "Removes local server log, stats files and persistent files."
   echo "Do NOT run this command while servers are running."
   echo ""
   echo "   clean_server_local [-num <server number>] [-persist] [-pid|-pidonly] [-grid $GRIDS_OPT] [-site $SITES_OPT] [-?]"
   echo ""
   echo "       Cleans up local server directories by removing log, stats, other temporary files"
   echo "       from the specified grid and site."
   echo ""
   echo "      <server number> Server number 1-99"
   echo "      -persist   Removes persistent files generated by servers"
   echo "      -pid       Removes cache server pid files (vf.gf.server.pid)"
   echo "      -pidonly   Removes only cache server pid files (vf.gf.server.pid)"
   echo "      -grid      Removes log and stats files generated in the specified grid"
   echo "                 Default: ${GRID_DEFAULT}"
   echo "      -site      Removes log and stats files generated in the specified site"
   echo "                 Default: ${SITE_DEFAULT}"
   echo ""
   echo "   Default: clean_server_local -num 1 -grid $GRID_DEFAULT -site $SITE_DEFAULT"
   echo ""
   exit
fi

. ${GRIDS_DIR}/${GRID}/site_${SITE}.sh > /dev/null 2>&1

if [ "$RUN_DIR" == "" ]; then
   RUN_DIR=$BASE_DIR/run
fi
if [ "$LOG_DIR" == "" ]; then
   LOG_DIR=$BASE_DIR/log
fi
if [ "$STATS_DIR" == "" ]; then
   STATS_DIR=$BASE_DIR/stats
fi

if [ "$ALL" == "true" ]; then
   PERSIST=true
fi

#
# clean servers
#

if [ "$PIDONLY" == "true" ]; then
  $COMMAND_PREFIX rm -f $RUN_DIR/${SERVER_ID}/vf.gf.server.pid
else
  $COMMAND_PREFIX rm -f $LOG_DIR/${SERVER_ID}.log $STATS_DIR/${SERVER_ID}.gfs
  if [ "$PERSIST" == "true" ]; then
     $COMMAND_PREFIX rm -rf $RUN_DIR/${SERVER_ID}
  elif [ "$PID" == "true" ]; then
     $COMMAND_PREFIX rm -f $RUN_DIR/${SERVER_ID}/vf.gf.server.pid
  fi
fi
