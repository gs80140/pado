. ./setenv.sh > /dev/null 2>&1
. ./all_env.sh > /dev/null 2>&1
. ./argenv.sh > /dev/null 2>&1

if [ "$HELP" == "true" ]; then
   echo "Usage:"
   echo "Removes server log, stats, and persistent files."
   echo "Do NOT run this command while servers are running."
   echo ""
   echo "   clean_server [-num <server number>] [-persist] [-pid|-pidonly] [-grid $GRIDS_OPT] [-site $SITES_OPT] [-?]"
   echo ""
   echo "       Cleans up directories by removing log, stats, other temporary files"
   echo "       from the specified grid and site."
   echo ""
   echo "      <server number> Server number 1-99"
   echo "      -persist   Removes persistent files generated by servers"
   echo "      -pid       Removes cache server pid files (vf.gf.server.pid)"
   echo "      -pidonly   Removes only cache server pid files (vf.gf.server.pid)"
   echo "      -grid      Removes log and stats files generated in the specified grid"
   echo "                 Default: ${GRID_DEFAULT}"
   echo "      -site      Removes log and stats files generated in the specified site"
   echo "                 Default: ${SITE_DEFAULT}"
   echo ""
   echo "   Default: clean_server -num 1 -grid $GRID_DEFAULT -site $SITE_DEFAULT"
   echo ""
   exit
fi

. ${GRIDS_DIR}/${GRID}/site_${SITE}.sh > /dev/null 2>&1

# Target host
#
# ServerArray elements:
#   array[0] ServerNumber
#   array[1] ServerHost
#   array[2] ServerPort
#   array[3] DebugPort
#   array[4] JmxPort
setLineArray $GRIDS_DIR/$GRID/server_${SITE}.sh
line="${LineArray[$SERVER_NUM_NO_LEADING_ZERO]}"
array=($line)
SERVER_ADDRESS=${array[1]}

if [ "$SERVER_ADDRESS" == "" ]; then
   echo "Invalid server number. Please enter the server number and its host address in"
   echo "   ${GRIDS_DIR}/${GRID}/server_${SITE}.sh"
   echo ""
else
   ssh -q -n $SSH_USER@$SERVER_ADDRESS "cd $REMOTE_BASE_DIR/bin_sh; ./clean_server_local $*;"
fi
