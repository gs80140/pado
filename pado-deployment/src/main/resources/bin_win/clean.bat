@echo off
@setlocal enabledelayedexpansion

@call setenv.bat
@call all_env.bat
@call argenv.bat %*

if "%1" == "-?" (
   echo Usage:
   echo Do NOT run this command while servers are running.
   echo It will remove the log and stats files.
   echo.
   echo    clean [-grid %GRIDS_OPT%] [-site %SITES_OPT%] [-all] [-locators] [-persist] [-clients] [-?]
   echo.
   echo       Cleans up directories by removing log, stats, other temporary files
   echo       from the specified grid and site.
   echo.
   echo       -all       Removes all files generated in the specified grid and site
   echo       -grid      Removes log and stats files generated in the specified grid
   echo                  Default: %GRID_DEFAULT%
   echo       -site      Removes log and stats files generated in the specified site
   echo                  Default: %SITE_DEFAULT%
   echo       -locators  Removes locator files in addition to server files
   echo       -persist   Removes persistent files generated by servers
   echo       -clients   Removes client files
   echo.
   echo    Default: clean -grid %GRID_DEFAULT% -site %SITE_DEFAULT%
   echo.
   goto stop
)

@call %GRIDS_DIR%\%GRID%\site_%SITE%.bat

@set SERVER_PREFIX=server-%GRID%-%SITE%

if "%RUN_DIR%" == "" (
   @set RUN_DIR=%BASE_DIR%\run
)
if "%LOG_DIR%" == "" (
   @set LOG_DIR=%BASE_DIR%/log
)
if "%STATS_DIR%" == "" (
   @set STATS_DIR=%BASE_DIR%/stats
)

:: locators
if "%ALL%" == "true" (
   @set LOCATORS=true
   @set PERSIST=true
)

if "%LOCATORS%" == "true" (
  rmdir /s /q %RUN_DIR%\%LOCATOR_ID% > NUL 2>&1
)
if "%CLIENTS%" == "true" (
   erase /f /q %LOG_DIR%\clien*.log > NUL 2>&1
   erase /f /q %STATS_DIR%\client*.gfs > NUL 2>&1
)

:: servers
for /l %%i in (1,1,%NUM_SERVERS%) do (
   if %%i LSS 10 (
      @set SERVER_NUM=0%%i
   ) else (
      @set SERVER_NUM=%%i
   )
   @set SERVER_ID=%SERVER_PREFIX%!SERVER_NUM!
   erase /f /q %LOG_DIR%\!SERVER_ID!.log %STATS_DIR%\!SERVER_ID!.gfs > NUL 2>&1
   if "%PERSIST%" == "true" (
      rmdir /s /q %RUN_DIR%\!SERVER_ID! > NUL 2>&1
   )
)

goto stop

:stop
