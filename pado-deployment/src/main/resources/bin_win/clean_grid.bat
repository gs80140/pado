@echo off
@setlocal enabledelayedexpansion

@call setenv.bat
@call all_env.bat
@call argenv.bat %*

if "%1" == "-?" (
   echo Usage:
   echo Do NOT run this command while servers are running.
   echo It will remove the log and stats files.
   echo.
   echo    clean_grid [-grid %GRIDS_OPT%] [-site %SITES_OPT%] [-all] [-locators] [-persist] [-clients] [-?]
   echo.
   echo        Cleans up directories by removing log, stats, other temporary files
   echo        from the specified grid.
   echo.
   echo       -grid      Removes log and stats files generated in the specified grid
   echo                  Default: %GRID_DEFAULT%
   echo       -site      Removes log and stats files generated in the specified site
   echo                  Default: %SITE_DEFAULT%
   echo       -all       Removes all files in the specified grid
   echo       -locators  Removes locator files in addition to server files
   echo       -persist   Removes persistent files generated by servers
   echo       -clients   Removes client files
   echo.
   echo    Default: clean_grid -grid %GRID%
   echo.
   goto stop
)

!
! clean all sites
!

if "%SITE_SPECIFIED%" == "true" (
   @call clean_site -grid %GRID% %*
   echo Cleaned grid: %GRID%, site: %SITE%
) else (
   for %%i in (%SITES%) do (
      @call clean_site -grid %GRID% -site %%i %*
   )
   echo Cleaned grid: %GRID%, all sites cleaned - %SITES%
)

:stop
